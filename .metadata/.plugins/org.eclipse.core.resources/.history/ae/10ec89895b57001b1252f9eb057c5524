package tests;

import java.io.FileInputStream;
import java.io.IOException;
import java.util.Arrays;

import org.apache.poi.ss.usermodel.CellType;
import org.apache.poi.xssf.usermodel.XSSFCell;
import org.apache.poi.xssf.usermodel.XSSFRow;
import org.apache.poi.xssf.usermodel.XSSFSheet;
import org.apache.poi.xssf.usermodel.XSSFWorkbook;
import org.testng.annotations.DataProvider;
import org.testng.annotations.Test;

public class SpiceJetTest {
	static FileInputStream fis;
	static XSSFWorkbook wb;
	static XSSFRow row;
	XSSFSheet sheet;
	XSSFCell cell;
	
	
	@Test(dataProvider = "readdata")
	public void testdata(String title, String fname, String lname, long mobile, String password, String cpass, long year, String month, long date, String email) throws IOException {
		
		System.out.println(title+" "+fname+" "+lname+" "+mobile+" "+password+" "+cpass+" "+year+" "+month+" "+date+" "+email);
		
		
	}

	@DataProvider
	public Object[][] readdata() throws IOException {
		fis = new FileInputStream("C:\\Users\\akash\\workspace\\SpiceJet\\src\\test\\SpiceJet.xlsx");
		wb = new XSSFWorkbook(fis);
		sheet = wb.getSheetAt(0);
		row = sheet.getRow(0);
		int totalrow = sheet.getLastRowNum();
		int totalcell = row.getLastCellNum();
		Object[][] obj = new Object[totalrow][totalcell];
		for (int i = 0; i < totalrow; i++) {
			for (int j = 0; j < totalcell; j++) {

				cell = sheet.getRow(i + 1).getCell(j);

				if (cell.getCellType() == CellType.STRING) {
					obj[i][j] = cell.getStringCellValue();
				} else {
					obj[i][j] = (long) cell.getNumericCellValue();
				}

			}
		}

		return obj;

	}

}
